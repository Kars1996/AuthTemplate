generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("db_PRISMA_URL") // Uses connection pooling.
}

enum UserRole {
  ADMIN
  STAFF
  USER
}

model Account {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String?
  role      UserRole @default(USER)
}
